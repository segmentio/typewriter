{
  "name": "typewriter",
  "version": "7.1.0",
  "description": "A compiler for generating strongly typed analytics clients via Segment Protocols",
  "repository": "ssh://git@github.com/segmentio/typewriter.git",
  "homepage": "https://github.com/segmentio/typewriter",
  "bugs": "https://github.com/segmentio/typewriter/issues",
  "author": "Colin King <colin.king@segment.com>",
  "license": "MIT",
  "main": "./dist/src/cli/index.js",
  "bin": "./dist/src/cli/index.js",
  "scripts": {
    "dev": "TS_NODE_FILES=true NODE_ENV=development ts-node ./src/cli",
    "build": "rm -rf dist && yarn typewriter prod && tsc && copyfiles --up 1 \"src/**/*.hbs\" dist/src/",
    "test": "jest --testPathIgnorePatterns 'tests/e2e/.*' 'example'",
    "e2e": "make e2e",
    "update": "make update",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "release": "yarn run build && np --any-branch",
    "release:pre": "yarn run build && np prerelease --any-branch --tag next --no-release-draft"
  },
  "engines": {
    "node": ">=0.10.22"
  },
  "devDependencies": {
    "@types/analytics-node": "^3.1.1",
    "@types/got": "^9.6.7",
    "@types/hapi__joi": "^15.0.2",
    "@types/jest": "^26.0.14",
    "@types/jest-expect-message": "^1.0.2",
    "@types/js-yaml": "^3.12.1",
    "@types/json-schema": "^7.0.3",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@types/prettier": "^2.1.1",
    "@types/prompts": "2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "copyfiles": "^2.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-expect-message": "^1.0.2",
    "latest-version": "^5.1.0",
    "lint-staged": "^10.4.0",
    "np": "^6.5.0",
    "prettier": "^2.1.2",
    "semver": "^7.3.2",
    "snyk": "^1.406.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3",
    "typewriter": "^7.1.0"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "analytics-node": "3.4.0-beta.1",
    "figures": "^3.0.0",
    "fuse.js": "^3.4.5",
    "got": "^9.6.0",
    "handlebars": "4.7.6",
    "ink": "^2.5.0",
    "ink-link": "^1.0.0",
    "ink-select-input": "^3.1.2",
    "ink-spinner": "^3.0.1",
    "ink-text-input": "^3.2.1",
    "js-yaml": "^3.13.1",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.20",
    "node-machine-id": "^1.1.12",
    "react": "^16.9.0",
    "sort-keys": "^3.0.0",
    "yargs": "^16.0.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "16.8.6"
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "useTabs": true,
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5",
          "printWidth": 100
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        "nofunc"
      ],
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/interface-name-prefix": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "tests/e2e/**/analytics/*",
    "src/analytics/**/*",
    "example/analytics/**/*"
  ],
  "jest": {
    "modulePaths": [
      "<rootDir>/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ]
  },
  "lint-staged": {
    "linters": {
      "*.(ts|tsx)": [
        "eslint --fix",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ],
      "*.yml": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "make precommit"
    }
  }
}
