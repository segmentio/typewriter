{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "strict": true,
    "target": "es2019",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/languages/templates/**/*"]
}
