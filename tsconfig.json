{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*"]
}
